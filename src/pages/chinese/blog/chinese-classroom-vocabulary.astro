const faq = [{ q: `What Chinese do I need for a Chinese class?`, a: `Key phrases include 请跟我读 (please repeat after me), 不懂 (I don't understand), 再说一遍 (say it again), and 怎么说 (how do you say...).` }];
const relatedTools = [{ name: "HSK Vocabulary", url: "/chinese/tools/hsk-vocabulary/" }];
