---
import SEO from '../components/SEO.astro';
import { siteConfig } from '../site.config';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  ogType?: string;
  noindex?: boolean;
  article?: { publishedTime?: string; modifiedTime?: string; tags?: string[] };
  schemas?: object[];
}

const props = Astro.props;
const { tracking } = siteConfig;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <SEO {...props} />

  {/* GTM */}
  {tracking.gtm && (
    <script set:html={`(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','${tracking.gtm}');`} />
  )}

  {/* AdSense */}
  {tracking.adsense.enabled && (
    <script
      async
      src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${tracking.adsense.client}`}
      crossorigin="anonymous"
    />
  )}
</head>
<body class="min-h-screen flex flex-col">
  {/* GTM noscript */}
  {tracking.gtm && (
    <noscript>
      <iframe
        src={`https://www.googletagmanager.com/ns.html?id=${tracking.gtm}`}
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      />
    </noscript>
  )}

  {/* Header */}
  <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
    <nav class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
      <a href="/" class="text-xl font-bold text-primary-700 flex items-center gap-2">
        ðŸ§° FreeToolkit
      </a>
      <div class="flex items-center gap-6 text-sm font-medium">
        <a href="/chinese/" class="text-gray-600 hover:text-chinese-600 transition-colors">ðŸˆ¶ Chinese</a>
        <a href="/japanese/" class="text-gray-600 hover:text-japanese-600 transition-colors">ðŸ—¾ Japanese</a>
        <a href="/about/" class="text-gray-600 hover:text-gray-800 transition-colors hidden sm:block">About</a>
      </div>
    </nav>
  </header>

  {/* Main Content */}
  <main class="flex-1">
    <slot />
  </main>

  {/* Footer */}
  <footer class="bg-gray-50 border-t border-gray-200 mt-16">
    <div class="max-w-6xl mx-auto px-4 py-10">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div>
          <h3 class="font-bold text-gray-800 mb-3">ðŸ§° FreeToolkit</h3>
          <p class="text-sm text-gray-500">Free online tools for learning Chinese and Japanese.</p>
        </div>
        <div>
          <h4 class="font-semibold text-gray-700 mb-3">Learn Chinese</h4>
          <ul class="space-y-2 text-sm text-gray-500">
            <li><a href="/chinese/tools/" class="hover:text-primary-600">Tools</a></li>
            <li><a href="/chinese/blog/" class="hover:text-primary-600">Blog</a></li>
            <li><a href="/chinese/downloads/" class="hover:text-primary-600">Downloads</a></li>
            <li><a href="/chinese/my-progress/" class="hover:text-primary-600">My Progress</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold text-gray-700 mb-3">Learn Japanese</h4>
          <ul class="space-y-2 text-sm text-gray-500">
            <li><a href="/japanese/tools/" class="hover:text-primary-600">Tools</a></li>
            <li><a href="/japanese/blog/" class="hover:text-primary-600">Blog</a></li>
            <li><a href="/japanese/downloads/" class="hover:text-primary-600">Downloads</a></li>
            <li><a href="/japanese/my-progress/" class="hover:text-primary-600">My Progress</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold text-gray-700 mb-3">More Tools</h4>
          <ul class="space-y-2 text-sm text-gray-500">
            <li><a href="https://calc.freetoolkit.cc" class="hover:text-primary-600">Calculators</a></li>
            <li><a href="https://convert.freetoolkit.cc" class="hover:text-primary-600">Converters</a></li>
            <li><a href="https://pdf.freetoolkit.cc" class="hover:text-primary-600">PDF Tools</a></li>
            <li><a href="https://json.freetoolkit.cc" class="hover:text-primary-600">Dev Tools</a></li>
          </ul>
        </div>
      </div>
      <div class="mt-8 pt-6 border-t border-gray-200 flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-gray-400">
        <p>&copy; {new Date().getFullYear()} FreeToolkit. All rights reserved.</p>
        <div class="flex gap-4">
          <a href="/about/" class="hover:text-gray-600">About</a>
          <a href="/privacy/" class="hover:text-gray-600">Privacy</a>
          <a href="/contact/" class="hover:text-gray-600">Contact</a>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
